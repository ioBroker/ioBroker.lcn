{
    "common": {
        "name":                     "lcn",
        "version":                  "0.1.0",
        "title":                    "LCN connection",
        "desc":                     {
           "en": "LCN",
           "de": "LCN",
           "ru": "LCN"
	    },
        "news": {
            "0.1.0": {
              "en": "Big changes",
              "de": "Große veränderungen",
              "ru": "Большие изменения",
              "pt": "Grandes mudanças",
              "nl": "Grote veranderingen",
              "fr": "Grands changements",
              "it": "Grandi cambiamenti",
              "es": "Grandes cambios",
              "pl": "Duże zmiany"
            }
        },
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "icon":                     "lcn.png",
        "enabled":                  false,
        "materialize":              true,
        "messagebox":               true,
	    "extIcon":                  "https://raw.githubusercontent.com/ioBroker/ioBroker.lcn/master/admin/lcn.png",
	    "keywords":                 ["LCN"],
        "readme":                   "https://github.com/ioBroker/ioBroker.lcn/blob/master/README.md",
	    "loglevel":                 "info",
        "type":                     "iot-systems",
	    "authors":                  ["bluefox <dogafox@gmail.com>"]
    },
    "native": {
      "port":                 4114,
      "host":                 "127.0.0.1",
      "reconnectTimeout":     30,
      "defaultTimeout":       1000,
      "pingInterval":         300,
      "pingTimeout":          1000,
      "user":                 "",
      "password":             "",
      "debug":                false,
      "license":              "",
      "readAtStart":          true
    },
    "objects": [

    ],
  "instanceObjects": [
    {
      "_id":  "info",
      "type": "channel",
      "common": {
        "name": "Information"
      },
      "native": {}
    },
    {
      "_id":  "info.connection",
      "type": "state",
      "common": {
        "role":  "indicator.connected",
        "name":  "If connected to LCN server",
        "type":  "boolean",
        "read":  true,
        "write": false,
        "def":   false
      },
      "native": {}
    },
    {
      "_id":  "scan",
      "type": "channel",
      "common": {
        "name": "Scan process"
      },
      "native": {}
    },
    {
      "_id":  "scan.step",
      "type": "state",
      "common": {
        "role":  "value",
        "name":  "Scan process",
        "type":  "number",
        "states": {"0": "no scan", "1": "detect devices", "2": "read devices"},
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "scan.progress",
      "type": "state",
      "common": {
        "role":  "value",
        "name":  "Scan progress",
        "type":  "number",
        "min":   0,
        "max":   250,
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "scan.found",
      "type": "state",
      "common": {
        "role":  "value",
        "name":  "Found devices",
        "type":  "number",
        "min":   0,
        "max":   250,
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "scan.manual",
      "type": "state",
      "common": {
        "role":  "state",
        "name":  "Manual device scan",
        "desc":  "Write device address in form S1:2 => Segment 1, Module 2. Optionally S1:2X. X = S - status, L - led. * - scan all known modules",
        "type":  "string",
        "read":  false,
        "write": true
      },
      "native": {}
    },
    {
      "_id":  "ir",
      "type": "channel",
      "common": {
        "name": "IR receiver"
      },
      "native": {}
    },
    {
      "_id":  "ir.serial",
      "type": "state",
      "common": {
        "role":  "state",
        "name":  "Serial number",
        "desc":  "Serial number of IR receiver",
        "type":  "string",
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "ir.level",
      "type": "state",
      "common": {
        "role":  "state",
        "name":  "Level",
        "desc":  "Level 1-4",
        "type":  "number",
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "ir.key",
      "type": "state",
      "common": {
        "role":  "state",
        "name":  "Button",
        "desc":  "Button 1-8",
        "type":  "number",
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "ir.lowbat",
      "type": "state",
      "common": {
        "role":  "indicator.lowbat",
        "name":  "Low battery",
        "desc":  "Low battery for this serial",
        "type":  "boolean",
        "read":  true,
        "write": false
      },
      "native": {}
    },
    {
      "_id":  "ir.action",
      "type": "state",
      "common": {
        "role":  "state",
        "name":  "Action",
        "desc":  "Action",
        "type":  "number",
        "states": {"0": "release", "1": "short", "2": "long"},
        "read":  true,
        "write": false
      },
      "native": {}
    }
  ]
}
